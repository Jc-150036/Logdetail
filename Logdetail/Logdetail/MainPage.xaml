<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Logdetail"
             x:Class="Logdetail.MainPage">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="label"
                Text="ベンチプレス"
                FontSize="30"
                   HorizontalOptions="Center"/>

            <BoxView BackgroundColor="Black"
                 HeightRequest="0.5"/>
            
            <AbsoluteLayout>
                
                <BoxView AbsoluteLayout.LayoutBounds="180,0,3,1000" BackgroundColor="Black"/>
                
                <BoxView AbsoluteLayout.LayoutBounds="360,0,3,1000" BackgroundColor="Black"/>
                <BoxView AbsoluteLayout.LayoutBounds="560,0,3,1000" BackgroundColor="Black"/>
            </AbsoluteLayout>
            <StackLayout Orientation="Horizontal">
            <Label x:Name="label1"
                       Text="    日付               "
                       FontSize="30"/>
            <Label x:Name="label2"
                       Text="kg          "
                       FontSize="30"/>
            <Label x:Name="label3"
                       Text="        レッグ(回数)          "
                       FontSize="30"/>
            <Label x:Name="label4"
                       Text="セット"
                       FontSize="30"/>
            </StackLayout>
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>